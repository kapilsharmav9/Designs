<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12 oct 2017 12:30 AM"
            android:id="@+id/workoutTimeDate"
            android:textSize="15dp"/>
        <LinearLayout
            android:id="@+id/workoutLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workoutTimeDate"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/workoutType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Running"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workoutLinearLayout"
            android:id="@+id/workoutDetailLinearLayout"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories Burnt : "
                    android:layout_marginLeft="20dp"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/workout_calories_burnt_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123328332"
                    android:textSize="15dp"
                    android:layout_weight="1.41"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance Covered : "
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/workout_distance_covered_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1232131 kilometer"
                    android:textSize="15dp"

                    android:layout_weight="1.10"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration : "
                    android:textSize="15dp"
                    android:layout_weight="1.16"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/workout_duration_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="267 min 20 sec"
                    android:textSize="15dp"
                    android:layout_weight="0.84"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average Speed : "
                    android:textSize="15dp"
                    android:layout_weight="0.57"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/workout_average_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="47.89 m/s"
                    android:textSize="15dp"
                    android:layout_weight="1"

                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>