<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.blogspot.athletio.ShowEventActivity">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD REMINDER"
        android:id="@+id/show_event_layout_add_reminder_button"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/background"
            android:id="@+id/show_event_layout_title"
            android:textSize="20dp"/>
        <LinearLayout
            android:id="@+id/show_event_layout_post_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_event_layout_title"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Time: "
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/show_event_layout_time_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11 oct 2017 12:30 AM"
                android:textSize="15dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/show_event_layout_post_details_layout"
            android:layout_below="@+id/show_event_layout_post_layout"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp">
            <TextView
                android:id="@+id/show_event_layout_event_description_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="15dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_event_layout_post_details_layout"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/show_event_layout_event_description_textview"
                    android:text="Host: "
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/show_event_layout_host_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Tanvir Fahim"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: "
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/show_event_layout_event_type_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Running"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance: "
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/show_event_layout_event_distance_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 kilometer"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration : "
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/show_event_layout_event_duration_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 hours 30 mininutes"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status : "
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/show_event_layout_event_status_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start: "
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/show_event_layout_event_start_loc_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show in MAP"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End : "
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/show_event_layout_event_stop_loc_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show in MAP"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
        </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
