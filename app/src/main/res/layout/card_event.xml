<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/background"
            android:id="@+id/eventcardTitle"
            android:textSize="20dp"/>
        <LinearLayout
            android:id="@+id/eventcardpostLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventcardTitle"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Time: "
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/eventcardTimeDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11 oct 2017 12:30 AM"
                android:textSize="15dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventcardpostDetailLinearLayout"
            android:layout_below="@+id/eventcardpostLinearLayout"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp">
            <TextView
                android:id="@+id/eventcardDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="15dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventcardpostDetailLinearLayout"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/eventcardDescription"
                    android:text="Host: "
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/eventcardHostName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Tanvir Fahim"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: "
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/eventcardType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Running"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance: "
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/eventcardDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 kilometer"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration : "
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/eventcardDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 hours 30 mininutes"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status : "
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/eventcardStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start: "
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/eventcardstartloction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show in MAP"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
            </LinearLayout> <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End : "
                android:textSize="15dp"
                android:layout_weight="1"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/eventcardEndloction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show in MAP"
                android:textSize="15dp"
                android:layout_weight="1"
                android:textAlignment="center"
                />
        </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>